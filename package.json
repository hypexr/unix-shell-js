{
  "name": "unix-shell-js",
  "version": "1.1.0",
  "description": "Browser-based Unix/Linux command emulator with vi editor support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy-to-demo",
    "copy-to-demo": "cp dist/index.js dist/vi-editor.js dist/example-files.js docs/",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "unix",
    "shell",
    "terminal",
    "emulator",
    "browser",
    "vim",
    "vi",
    "linux",
    "bash",
    "command-line",
    "cli",
    "filesystem"
  ],
  "author": "scott@hypexr.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypexr/unix-shell-js.git"
  },
  "bugs": {
    "url": "https://github.com/hypexr/unix-shell-js/issues"
  },
  "homepage": "https://github.com/hypexr/unix-shell-js#readme",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}

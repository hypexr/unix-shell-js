{
  "name": "unix-shell-js",
  "version": "1.2.0",
  "description": "Browser-based Unix/Linux command emulator with vi editor support",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:browser && npm run copy-to-demo",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:browser": "rollup -c",
    "copy-to-demo": "cp dist/browser/index.js dist/browser/vi-editor.js dist/browser/example-files.js docs/",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.js\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "unix",
    "shell",
    "terminal",
    "emulator",
    "browser",
    "vim",
    "vi",
    "linux",
    "bash",
    "command-line",
    "cli",
    "filesystem"
  ],
  "author": "scott@hypexr.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypexr/unix-shell-js.git"
  },
  "bugs": {
    "url": "https://github.com/hypexr/unix-shell-js/issues"
  },
  "homepage": "https://github.com/hypexr/unix-shell-js#readme",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "ts-jest": "^29.4.5",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
